<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="inventory_configuration" sortOrder="60">
        <settings>
            <label translate="true">Configuration</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
            <dataScope>inventory_configuration</dataScope>
        </settings>
        <container name="container_manage_stock" component="Magento_Ui/js/form/components/group" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">container</item>
                    <item name="label" xsi:type="string" translate="true">Manage Stock</item>
                    <item name="dataScope" xsi:type="string">manage_stock</item>
                </item>
            </argument>
            <field name="value" formElement="select" sortOrder="10">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="rawOptions" xsi:type="boolean">true</item>
                    </item>
                </argument>
                <settings>
                    <dataType>text</dataType>
                    <dataScope>value</dataScope>
                    <label translate="true">Manage Stock</label>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Magento\Config\Model\Config\Source\Yesno"/>
                        </settings>
                    </select>
                </formElements>
            </field>
            <field name="use_config_value" component="Magento_InventoryConfigurationAdminUi/js/components/use-config-settings" formElement="checkbox">
                <settings>
                    <dataScope>use_config_value</dataScope>
                    <links>
                        <link name="linkedValue">${ $.provider }:data.inventory_configuration.manage_stock.value</link>
                        <link name="defaultValue">${ $.provider }:data.inventory_configuration.manage_stock.default_value</link>
                    </links>
                    <exports>
                        <link name="checked">${$.parentName}.value:disabled</link>
                    </exports>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <description translate="true">Use Config Settings</description>
                            <valueMap>
                                <map name="false" xsi:type="string">0</map>
                                <map name="true" xsi:type="string">1</map>
                            </valueMap>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
        </container>
        <container name="container_min_qty" component="Magento_Ui/js/form/components/group" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">container</item>
                    <item name="label" xsi:type="string" translate="true">Out-of-Stock Threshold</item>
                    <item name="dataScope" xsi:type="string">min_qty</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.provider }:data.inventory_configuration.manage_stock.value</item>
                    </item>
                </item>
            </argument>
            <field name="value" sortOrder="10" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="rawOptions" xsi:type="boolean">true</item>
                    </item>
                </argument>
                <settings>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                    </validation>
                    <label translate="true">Out-of-Stock Threshold</label>
                    <dataScope>value</dataScope>
                </settings>
            </field>
            <field name="use_config_value" component="Magento_InventoryConfigurationAdminUi/js/components/use-config-settings" formElement="checkbox">
                <settings>
                    <dataScope>use_config_value</dataScope>
                    <links>
                        <link name="linkedValue">${ $.provider }:data.inventory_configuration.min_qty.value</link>
                        <link name="defaultValue">${ $.provider }:data.inventory_configuration.min_qty.default_value</link>
                    </links>
                    <exports>
                        <link name="checked">${$.parentName}.value:disabled</link>
                    </exports>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <description translate="true">Use Config Settings</description>
                            <valueMap>
                                <map name="false" xsi:type="string">0</map>
                                <map name="true" xsi:type="string">1</map>
                            </valueMap>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
        </container>
        <!-- TODO: What exactly value should be displayed with checked "Use config value"? If dynamicRows then need resolve problem with data -->
        <fieldset name="container_min_sale_qty" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="scopeLabel" xsi:type="string">[GLOBAL]</item>
                </item>
            </argument>
            <settings>
                <label translate="true"/>
                <dataScope>stock_data</dataScope>
            </settings>
            <field name="min_sale_qty" component="Magento_CatalogInventory/js/components/qty-validator-changer" sortOrder="0" formElement="input">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="object">Magento\CatalogInventory\Model\Source\StockConfiguration</item>
                    </item>
                </argument>
                <settings>
                    <scopeLabel>[GLOBAL]</scopeLabel>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                    </validation>
                    <label translate="true">Minimum Qty Allowed in Shopping Cart</label>
                    <visible>false</visible>
                    <dataScope>min_sale_qty</dataScope>
<!--                    <imports>
                        <link name="handleChanges">${$.provider}:data.product.stock_data.is_qty_decimal</link>
                    </imports>-->
                </settings>
            </field>
            <field name="use_config_min_sale_qty" component="Magento_CatalogInventory/js/components/use-config-min-sale-qty" sortOrder="2" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="value" xsi:type="string">1</item>
                        <item name="inputField" xsi:type="string">ns = ${ $.ns }, index=min_sale_qty</item>
                        <item name="dynamicRowsField" xsi:type="string">ns = ${ $.ns }, index=min_qty_allowed_in_shopping_cart</item>
                        <item name="valueFromConfig" xsi:type="object">Magento\CatalogInventory\Model\Source\StockConfiguration</item>
                        <item name="keyInConfiguration" xsi:type="string">min_sale_qty</item>
                        <item name="unserialized" xsi:type="boolean">true</item>
                    </item>
                </argument>
                <settings>
                    <additionalClasses>
                        <class name="admin__field-use-config">true</class>
                        <class name="admin__field-no-label">true</class>
                    </additionalClasses>
                    <dataScope>use_config_min_sale_qty</dataScope>
                </settings>
                <formElements>
                    <checkbox class="Magento\CatalogInventory\Ui\Component\Product\Form\Element\UseConfigSettings">
                        <settings>
                            <description translate="true">Use Config Settings</description>
                            <valueMap>
                                <map name="false" xsi:type="string">0</map>
                                <map name="true" xsi:type="string">1</map>
                            </valueMap>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
            <dynamicRows name="min_qty_allowed_in_shopping_cart" sortOrder="1">
                <settings>
                    <dndConfig>
                        <param name="enabled" xsi:type="boolean">false</param>
                    </dndConfig>
                    <addButton>false</addButton>
                    <scopeLabel>[GLOBAL]</scopeLabel>
                    <label translate="true">Minimum Qty Allowed in Shopping Cart</label>
                    <visible>false</visible>
                    <componentType>dynamicRows</componentType>
                </settings>
                <container name="record" component="Magento_Ui/js/dynamic-rows/record">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="isTemplate" xsi:type="boolean">true</item>
                            <item name="is_collection" xsi:type="boolean">true</item>
                            <item name="componentType" xsi:type="string">container</item>
                        </item>
                    </argument>
                    <field name="customer_group_id" component="Magento_Ui/js/form/element/select" formElement="select">
                        <settings>
                            <dataType>text</dataType>
                            <label translate="true">Customer Group</label>
                            <disabled>true</disabled>
                            <dataScope>customer_group_id</dataScope>
                        </settings>
                        <formElements>
                            <select>
                                <settings>
                                    <options class="Magento\Customer\Model\Customer\Source\GroupSourceInterface"/>
                                </settings>
                            </select>
                        </formElements>
                    </field>
                    <field name="min_sale_qty" formElement="input">
                        <settings>
                            <dataType>number</dataType>
                            <label translate="true">Minimum Qty</label>
                            <disabled>true</disabled>
                            <visible>true</visible>
                            <dataScope>min_sale_qty</dataScope>
                        </settings>
                    </field>
                </container>
            </dynamicRows>
        </fieldset>
