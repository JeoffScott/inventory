<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="inventory_configuration" sortOrder="60">
    <settings>
        <label translate="true">Configuration</label>
        <collapsible>true</collapsible>
        <opened>true</opened>
        <dataScope>inventory_configuration</dataScope>
    </settings>
        <container name="container_backorders" component="Magento_Ui/js/form/components/group" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">container</item>
                    <item name="label" xsi:type="string" translate="true">Backorders</item>
                    <item name="dataScope" xsi:type="string">backorders</item>
                </item>
            </argument>
            <field name="value" formElement="select">
                <settings>
                    <label translate="true">Backorders</label>
                    <dataScope>value</dataScope>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options class="Magento\InventoryConfigurationAdminUi\Model\Source\Backorders"/>
                        </settings>
                    </select>
                </formElements>
            </field>
            <field name="use_config_value" component="Magento_InventoryConfigurationAdminUi/js/components/use-config-settings" formElement="checkbox">
                <settings>
                    <dataScope>use_config_value</dataScope>
                    <links>
                        <link name="linkedValue">${ $.provider }:data.inventory_configuration.backorders.value</link>
                        <link name="defaultValue">${ $.provider }:data.inventory_configuration.backorders.default_value</link>
                    </links>
                    <exports>
                        <link name="checked">${$.parentName}.value:disabled</link>
                    </exports>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <description translate="true">Use Config Settings</description>
                            <valueMap>
                                <map name="false" xsi:type="string">0</map>
                                <map name="true" xsi:type="string">1</map>
                            </valueMap>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
        </container>
        <container name="container_notify_stock_qty" component="Magento_Ui/js/form/components/group" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">container</item>
                    <item name="label" xsi:type="string" translate="true">Notify for Quantity Below</item>
                    <item name="dataScope" xsi:type="string">notify_stock_qty</item>
                </item>
            </argument>
            <field name="value" formElement="input">
                <settings>
                    <validation>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                    </validation>
                    <label translate="true">Notify for Quantity Below</label>
                    <dataScope>value</dataScope>
                </settings>
            </field>
            <field name="use_config_value" component="Magento_InventoryConfigurationAdminUi/js/components/use-config-settings" formElement="checkbox">
                <settings>
                    <dataScope>use_config_value</dataScope>
                    <links>
                        <link name="linkedValue">${ $.provider }:data.inventory_configuration.notify_stock_qty.value</link>
                        <link name="defaultValue">${ $.provider }:data.inventory_configuration.notify_stock_qty.default_value</link>
                    </links>
                    <exports>
                        <link name="checked">${$.parentName}.value:disabled</link>
                    </exports>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <description translate="true">Use Config Settings</description>
                            <valueMap>
                                <map name="false" xsi:type="string">0</map>
                                <map name="true" xsi:type="string">1</map>
                            </valueMap>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
        </container>
    </fieldset>
</form>