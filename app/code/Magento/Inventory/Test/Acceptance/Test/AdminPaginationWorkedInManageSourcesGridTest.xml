<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../../dev/tests/acceptance/vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Test/etc/testSchema.xsd">
    <test name="AdminPaginationWorkedInManageSourcesGridTest">
        <annotations>
            <features value="Multi-Source Inventory"/>
            <stories value="Configuration-Sources"/>
            <title value="Pagination worked in Manage Sources grid - Admin user"/>
            <description value="You should be able to switch between pages on Manage Sources grid"/>
            <testCaseId value="933"/>
            <severity value="CRITICAL"/>
            <group value="msi"/>
        </annotations>

        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
            <actionGroup ref="ChangeAllSourcesStatusActionGroup" stepKey="disableAllSourcesBeforeTest"/>
            <createData entity="_minimalSource" stepKey="createSource1"/>
            <createData entity="_minimalSource" stepKey="createSource2"/>
            <createData entity="_minimalSource" stepKey="createSource3"/>
            <createData entity="_minimalSource" stepKey="createSource4"/>
            <createData entity="_minimalSource" stepKey="createSource5"/>
            <createData entity="_minimalSource" stepKey="createSource6"/>
            <createData entity="_minimalSource" stepKey="createSource7"/>
            <createData entity="_minimalSource" stepKey="createSource8"/>
            <createData entity="_minimalSource" stepKey="createSource9"/>
            <createData entity="_minimalSource" stepKey="createSource10"/>
            <createData entity="_minimalSource" stepKey="createSource11"/>
            <createData entity="_minimalSource" stepKey="createSource12"/>
            <createData entity="_minimalSource" stepKey="createSource13"/>
            <createData entity="_minimalSource" stepKey="createSource14"/>
            <createData entity="_minimalSource" stepKey="createSource15"/>
            <createData entity="_minimalSource" stepKey="createSource16"/>
            <createData entity="_minimalSource" stepKey="createSource17"/>
            <createData entity="_minimalSource" stepKey="createSource18"/>
            <createData entity="_minimalSource" stepKey="createSource19"/>
            <createData entity="_minimalSource" stepKey="createSource20"/>
            <createData entity="_minimalSource" stepKey="createSource21"/>
            <createData entity="_minimalSource" stepKey="createSource22"/>            
        </before>

        <after>
            <actionGroup ref="ChangeAllSourcesStatusActionGroup" stepKey="disableAllSourcesAfterTest"/>
            <actionGroup ref="logout" stepKey="logoutOfAdmin"/>
        </after>

        <amOnPage url="{{AdminManageSourcePage.url}}" stepKey="amOnTheManageSourcePage"/>
        <waitForPageLoad time="30" stepKey="waitForAdminManageSourcePageLoad"/>
        <conditionalClick selector="{{AdminDataGridHeaderSection.clearFilters}}" dependentSelector="{{AdminDataGridHeaderSection.clearFilters}}" visible="true" stepKey="clickClearFilters1"/>
        <waitForPageLoad time="30" stepKey="waitFilterCleared"/>
        <actionGroup ref="AdminGridFilterSearchResultsByInput" stepKey="filterSearchResultsByCode">
            <argument name="selector" value="AdminManageSourcesGridFilterControls.code"/>
            <argument name="value" value="minimal_source"/>
        </actionGroup>
        <actionGroup ref="FilterSourcesGridByStatus" stepKey="filterSearchResultsByStatus"/>
        <waitForPageLoad time="30" stepKey="waitFilterApplied"/>
        <actionGroup ref="adminDataGridSelectPerPage" stepKey="select20SourcesPerPage">
            <argument name="perPage" value="20"/>
        </actionGroup>
        <waitForPageLoad time="30" stepKey="waitSelectPerPageApplied"/>
        <see selector="{{AdminDataGridPaginationSection.totalPages}}" userInput="2" stepKey="seeTotalPages"/>
        <seeNumberOfElements selector="{{AdminManageSourcesGridBody.dataRows}}" userInput="20" stepKey="checkNumberOfRowsOnFirstPage"/>
        <click selector="{{AdminDataGridPaginationSection.nextPage}}" stepKey="goToNextPage1"/>
        <waitForPageLoad time="30" stepKey="waitNextGridPageOpened"/>
        <seeNumberOfElements selector="{{AdminManageSourcesGridBody.dataRows}}" userInput="2" stepKey="checkNumberOfRowsOnSecondPage"/>
        <click selector="{{AdminDataGridPaginationSection.previousPage}}" stepKey="goTopreviousPage1"/>
        <waitForPageLoad time="30" stepKey="waitPrevGridPageOpened"/>
        <seeNumberOfElements selector="{{AdminManageSourcesGridBody.dataRows}}" userInput="20" stepKey="checkNumberOfRowsOnFirstPageAgain"/>
    </test>
</tests>
