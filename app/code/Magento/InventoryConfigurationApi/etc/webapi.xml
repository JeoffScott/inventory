<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/inventory/configuration/backorders" method="GET">
        <service class="Magento\InventoryConfigurationApi\Api\GetBackorderStatusConfigurationValueInterface" method="execute"/>
        <resources>
            <resource ref="Magento_Backend::admin"/>
        </resources>
    </route>
    <route url="/V1/inventory/configuration/backorders" method="POST">
        <service class="Magento\InventoryConfigurationApi\Api\SetBackorderStatusConfigurationValueInterface" method="execute"/>
        <resources>
            <resource ref="Magento_Backend::admin"/>
        </resources>
    </route>
</routes>
